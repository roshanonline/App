# Server Configuration
PORT=5000

# Database (Replace with your actual MongoDB connection string)
# Example local: mongodb://localhost:27017/echo-memory
# Example Atlas: mongodb+srv://<username>:<password>@<cluster-url>/echo-memory?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/echo-memory

# JWT Secret (REPLACE with a long, random, secure string)
JWT_SECRET=REPLACE_THIS_WITH_A_VERY_STRONG_SECRET_KEY
JWT_EXPIRES_IN=1d # Example: token expires in 1 day